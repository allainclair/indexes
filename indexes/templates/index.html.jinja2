{% extends "base.html.jinja2" %}

{% block content %}
	<div class="container mx-auto p-4">
		<h1 class="text-4xl font-bold text-center text-gray-800 mb-8">Índices Econômicos</h1>

		<div class="bg-white shadow-md rounded-lg p-6">
			<h2 class="text-2xl font-semibold text-gray-700">IPCA - Índice Nacional de Preços ao Consumidor Amplo</h2>
			<h3 class="text-md font-semibold text-gray-500">
				<a
					href="https://www.ibge.gov.br/estatisticas/economicas/precos-e-custos/9256-indice-nacional-de-precos-ao-consumidor-amplo.html"
					class="text-blue-500 hover:underline"
				>
					Referência: IBGE
				</a>
			</h3>

			<p class="text-gray-600 text-lg mt-6">
				IPCA atual: <span class="font-bold text-gray-800">{{ current_ipca.rate }}%</span> ({{ current_ipca.date_ }})
			</p>

			<div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
				<div class="bg-blue-50 p-4 rounded-lg shadow-sm">
					<h3 class="text-xl font-semibold text-blue-800 mb-2">Core Inflation</h3>
					<p class="text-blue-700">Rate: <span class="font-bold">{{ core_inflation_rate }}%</span></p>
				</div>
				<div class="bg-green-50 p-4 rounded-lg shadow-sm">
					<h3 class="text-xl font-semibold text-green-800 mb-2">Food Inflation</h3>
					<p class="text-green-700">Rate: <span class="font-bold">{{ food_inflation_rate }}%</span></p>
				</div>
				<div class="bg-yellow-50 p-4 rounded-lg shadow-sm">
					<h3 class="text-xl font-semibold text-yellow-800 mb-2">Energy Inflation</h3>
					<p class="text-yellow-700">Rate: <span class="font-bold">{{ energy_inflation_rate }}%</span></p>
				</div>
				<div class="bg-red-50 p-4 rounded-lg shadow-sm">
					<h3 class="text-xl font-semibold text-red-800 mb-2">Housing Inflation</h3>
					<p class="text-red-700">Rate: <span class="font-bold">{{ housing_inflation_rate }}%</span></p>
				</div>
			</div>

		</div>
	</div>
{% endblock %}
